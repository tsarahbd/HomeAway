<% layout('layouts/boilerplate')%>

    <div class="row mb-5">
        <div class="col-12">
            <button type="button" class="btn btn-primary"><a href="/listings/new">Add new listing</a></button>        
            <button type="button" class="btn btn-success"><a href="/messaging/host">Message center</a></button>
        </div>
    </div>
    <div class="row">
        <h1>My Listings</h1>
        <div class="col-12">
            <% for (let listing of listings){ %>
                <div class="card mb-3">
                    <div class="row">
                        <div class="col-md-4">
                            <% if(listing.images.length){ %>
                                <img class="img-fluid" alt="" src="<%=listing.images[0]%>">
                                <% } else { %>
                                    <img class="img-fluid" alt=""
                                        src="https://images.unsplash.com/photo-1449844908441-8829872d2607?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1470&q=80">
                                    <% } %>
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <a href="/listings/<%=listing._id%>">
                                        <%= listing.title %>
                                    </a>
                                </h5>
                                <p class="card-text">
                                    â‚¬<%= listing.price %> per night
                                </p>
                                <p class="card-text">
                                    <%= listing.description %>
                                </p>
                                <p class="card-text">
                                    <small class="text-muted">
                                        <%= listing.location%>
                                    </small>
                                </p>
                                <button type="button" class="btn btn-info"><a href="/listings/<%=listing._id%>/edit">Edit</a></button>
                            </div>
                        </div>
                    </div>
                </div>
                <% } %>
        </div>
    </div>